<div id="newspaper-container" class="louisville-theme">
    <div class="newspaper-header">
        <h1 id="town-banner">Louisville News Center</h1>
        <div class="newspaper-meta">
            <span id="current-date"></span>
            <span id="chicago-time"></span>
            <span id="town-location">Cardinals & Indians Country</span>
        </div>
    </div>
    <div id="news-grid">Loading Louisville Headlines...</div>
</div>

<style>
    /* Louisville Silo Styling */
    #newspaper-container { 
        padding: 30px; 
        border-radius: 12px; 
        font-family: 'Times New Roman', serif; 
        background: #fff; 
        color: #000; 
        box-shadow: 0 10px 40px rgba(0,0,0,0.1); 
        max-width: 1000px; 
        margin: auto; 
    }
    
    .newspaper-header h1 {
        color: #C41E3A; /* Cardinal Red */
        font-weight: 900;
        text-transform: uppercase;
        margin-bottom: 5px;
    }

    .newspaper-meta { 
        border-top: 2px solid #000; 
        border-bottom: 5px solid #000; 
        padding: 10px 0; 
        display: flex; 
        justify-content: space-between; 
        font-weight: bold; 
        margin-bottom: 25px; 
    }

    .article { 
        padding: 30px; 
        border-radius: 8px; 
        margin-bottom: 30px; 
        border-left: 12px solid #333; /* Default Black */
        background: #f9f9f9; 
        box-shadow: 0 4px 15px rgba(0,0,0,0.05); 
        transition: transform 0.2s ease;
    }

    .article h3 { 
        font-size: 1.9rem; 
        text-transform: uppercase; 
        border-bottom: 1px solid #ddd; 
        padding-bottom: 10px; 
    }

    /* Louisville Specific Silo Colors */
    .border-louisville { border-left-color: #C41E3A !important; } /* Cardinal Red */
    .badge-louisville { background: #C41E3A !important; color: #fff; }
    
    .border-general { border-left-color: #000 !important; } /* School/County Black */
    .badge-general { background: #000 !important; color: #fff; }

    .town-badge { 
        display: inline-block; 
        padding: 4px 12px; 
        border-radius: 4px; 
        font-size: 0.9rem; 
        font-weight: bold; 
        margin-bottom: 10px; 
    }

    .story-body { font-size: 1.15rem; line-height: 1.6; color: #333; }
</style>

<script>
(async () => {
    const MY_TOWN = "Louisville";
    const DATA_URL = "https://raw.githubusercontent.com/KFruti88/clay-county-news/main/news_data.json";
    
    // Set Current Date
    document.getElementById('current-date').innerText = new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });

    // Live Clock
    function updateClock() {
        const options = { timeZone: 'America/Chicago', hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: true };
        document.getElementById('chicago-time').innerText = new Intl.DateTimeFormat([], options).format(new Date());
    }
    updateClock(); setInterval(updateClock, 1000);

    try {
        const res = await fetch(DATA_URL);
        const data = await res.json();
        
        // SILO FILTER: Show only Louisville OR County News
        const filtered = data.filter(s => s.tags.includes(MY_TOWN) || s.tags.includes("County News"));
        
        const grid = document.getElementById('news-grid');
        grid.innerHTML = filtered.length ? "" : "No news for Louisville currently.";

        filtered.forEach(story => {
            // Determine if it gets the Red or Black border
            const isLouisville = story.tags.includes(MY_TOWN);
            const colorClass = isLouisville ? 'louisville' : 'general';

            grid.innerHTML += `
                <div class="article border-${colorClass}">
                    <span class="town-badge badge-${colorClass}">${isLouisville ? 'LOUISVILLE' : 'COUNTY-WIDE'} EDITION</span>
                    <h3>${story.title}</h3>
                    <div class="story-body">
                        <strong>[${story.category}]</strong><br>
                        ${story.description.replace(/\n/g, '<br>')}
                    </div>
                </div>`;
        });
    } catch (e) { 
        console.error("Load failed:", e); 
        document.getElementById('news-grid').innerText = "System currently offline. Please check back soon.";
    }
})();
</script>
